<%- include("partials/header") %>
    
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>WELCOME TO MMA RANKINGS</h1>
            <p>Compare and rate your favourite fighters</p>
            <p>
                <a class="btn btn-primary btn-lg" href="fighters/new">Add New Fighter</a>
            </p>
        </div> 
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% fighters.forEach(function(fighters){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= fighters.image %>" alt="">
                <div class="caption">
                    <h4><%= fighters.name %></h4>
                </div>
                <p>
                    <a href="/fighters/<%= fighters._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
    <% }); %>
    </div>
</div>

<%- include("partials/footer") %>